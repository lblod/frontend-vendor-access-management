<AuApp>
  <AuMainHeader @homeRoute="index" @appTitle="Vendor Access Management">
    <ul class="au-c-list-horizontal">
      <li class="au-c-list-horizontal__item">
        <LanguageDropdown />
      </li>
      {{#if this.session.isAuthenticated}}
        <li class="au-c-list-horizontal__item">
          <AuDropdown @title={{this.currentSession.user.fullName}} @alignment="right">
            <AuButton @icon="logout" @skin="link" role="menuitem" {{on "click" this.logout}}>
              {{t "application.header.logout"}}
            </AuButton>
          </AuDropdown>
        </li>
      {{/if}}
    </ul>
  </AuMainHeader>

  <div class="au-c-main-container" id="main">
    <div class="au-c-main-container__content au-c-main-container__content--scroll">

      <main id="content" style="min-height: 70rem" {{!template-lint-disable no-inline-styles}}>
        {{outlet}}
      </main>

