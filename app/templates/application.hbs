<AuApp>
  <AuMainHeader @homeRoute="index" @appTitle="Vendor Access Management">
    <ul class="au-c-list-horizontal">
      <li class="au-c-list-horizontal__item">
        <LanguageDropdown />
      </li>
      {{#if this.session.isAuthenticated}}
        <li class="au-c-list-horizontal__item">
          <AuDropdown @title={{this.currentSession.user.fullName}} @alignment="right">
            {{!template-lint-disable require-context-role}}
            <AuButton @icon="logout" @skin="link" role="menuitem" require-context-role {{on "click" this.logout}}>
              {{t "application.header.logout"}}
            </AuButton>
          </AuDropdown>
        </li>
      {{/if}}
    </ul>
  </AuMainHeader>
  <AuMainContainer as |m|>
    <m.content @scroll={{true}}>
      {{outlet}}
