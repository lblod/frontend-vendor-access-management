<div class="au-o-body-container au-o-box">
  <div class="au-u-margin-top">

    <AuHeading @level="1" @skin="2">
      Externe software leveranciers
    </AuHeading>

    <AuDataTable @content={{this.model}} @fields="Vendors" @noDataMessage="Geen vendors gevonden" @sort={{this.sort}}
      @size={{this.size}} @page={{this.page}} @isLoading={{isLoading}} as |t|>
      <t.content as |c|>
        <c.header>
          <AuDataTableThSortable @field="name" @currentSorting={{sort}} @label="Naam" @class="data-table__header-title" />
          <AuDataTableThSortable @field="uri" @currentSorting={{sort}} @label="URI" @class="data-table__header-title" />
          <th> aanpassen </th>
        </c.header>
        <c.body as |vendor|>
          <td>
            {{vendor.name}}
          </td>
          <td>
            {{vendor.uri}}
          </td>
          <td>
            <LinkTo @route="vendors.subject" @model={{vendor.id}}>Edit</LinkTo>
          </td>
        </c.body>
      </t.content>
    </AuDataTable>
  </div>
</div>