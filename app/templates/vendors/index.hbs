<div class="au-o-body-container au-o-box">
  <div class="au-u-margin-top">

    <AuHeading @level="1" @skin="2">
      Externe software leveranciers
    </AuHeading>

    <AuDataTable @content={{this.model}} @fields="Vendors" @noDataMessage="Geen vendors gevonden" @sort={{sort}}
      @size={{size}} @page={{page}} @isLoading={{isLoading}} as |t|>
      <t.content as |c|>
        <c.header>
          <th class="data-table__header-title u-hidden--mobile">Naam</th>
          <th class="data-table__header-title u-visible--tablet-portrait-up" style="max-width: 5rem;">Uri</th>
          <th class="data-table__header-title u-visible--tablet-portrait-up" style="max-width: 5rem;">modify</th>
        </c.header>
        <c.body as |row|>
          <td>
            {{row.name}}
          </td>
          <td>
            {{row.uri}}
          </td>
          <td>
            <LinkTo @route="vendors.subject" @model={{row.id}}>Edit</LinkTo>
          </td>
        </c.body>
      </t.content>
    </AuDataTable>

  </div>
</div>