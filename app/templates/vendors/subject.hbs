<AuHeading>Edit vendor</AuHeading>

<p>vendorname: {{this.model.name}} </p>
<label>API KEY: </label>
 <Input @type="password" value="{{this.model.key}}" readonly/>

<AuDataTable @content={{this.model.canActOnBehalf}} @fields="Vendors" @noDataMessage="Geen vendors gevonden" @sort={{sort}} @size={{size}} @page={{page}} @isLoading={{isLoading}} as |t|>
  <t.content as |c|>
    <c.header>
      <th class="data-table__header-title u-hidden--mobile">Bestuurseenheid</th>
      <th class="data-table__header-title u-visible--tablet-portrait-up" style="max-width: 5rem;">Type</th>
      <th class="data-table__header-title u-visible--tablet-portrait-up" style="max-width: 5rem;">Actie</th>
    </c.header>
    <c.body as |row|>
      <td>
          {{row.naam}}
      </td>
      <td>
          {{row.classificatie.label}}
      </td>
      <td>
          <AuButton @alert="true">Delete</AuButton>
      </td>
    </c.body>
  </t.content>
</AuDataTable>


